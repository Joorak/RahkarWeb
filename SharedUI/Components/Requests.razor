
@* @inject AppDbContext DbContext *@

<div class="content-container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>شماره درخواست</th>
                <th>تاریخ ثبت</th>
                <th>مشتری</th>
                <th>طرح تسهیلات</th>
                <th>وضعیت</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in _requests)
            {
                <tr>
                    <td>@request.RequestNumber</td>
                    <td>@request.CreatedDate.ToString("yyyy/MM/dd")</td>
                    <td>@request.CustomerName</td>
                    <td>@request.FacilityPlan</td>
                    <td>@request.Status</td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots"></i>
                            </button>
                            <ul class="dropdown-menu">
                                @foreach (var action in Actions)
                                {
                                    <li><a class="dropdown-item" href="@action.Link">@action.Title</a></li>
                                }
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= TotalPages; i++)
            {
                <li class="page-item @(i == CurrentPage ? "active" : "")"><a class="page-link" href="#" @onclick="() => ChangePage(i)">@i</a></li>
            }
        </ul>
    </nav>
</div>

@code {
    [Parameter]
    public List<Request> _requests { get; set; } = new List<Request>();

    [Parameter]
    public List<DropdownAction> Actions { get; set; } = new List<DropdownAction>
    {
        new DropdownAction { Title = "چاپ قرارداد", Link = "#" },
        new DropdownAction { Title = "جدول بازپرداخت", Link = "#" },
        new DropdownAction { Title = "حذف", Link = "#" },
        new DropdownAction { Title = "ویرایش", Link = "#" }
    };

    private int CurrentPage { get; set; } = 1;
    private int TotalPages { get; set; } = 8;

    protected override async Task OnInitializedAsync()
    {
        // بارگذاری درخواست‌ها از دیتابیس
        //_requests = await DbContext.Requests.ToListAsync();
        if (!_requests.Any())
        {
            // داده‌های پیش‌فرض در صورت خالی بودن دیتابیس
            _requests = new List<Request>
            {
                new Request { RequestNumber = "REQ-001", CreatedDate = DateTime.Now.AddDays(-10), CustomerName = "محمد حسینی", FacilityPlan = "طرح 12 ماهه", Status = "در انتظار" },
                new Request { RequestNumber = "REQ-002", CreatedDate = DateTime.Now.AddDays(-9), CustomerName = "سارا احمدی", FacilityPlan = "طرح 24 ماهه", Status = "تایید شده" },
                new Request { RequestNumber = "REQ-003", CreatedDate = DateTime.Now.AddDays(-8), CustomerName = "رضا کاظمی", FacilityPlan = "طرح 36 ماهه", Status = "رد شده" },
                new Request { RequestNumber = "REQ-004", CreatedDate = DateTime.Now.AddDays(-7), CustomerName = "نیما رحیمی", FacilityPlan = "طرح 12 ماهه", Status = "در حال بررسی" }
            };
        }
    }

    private void ChangePage(int page)
    {
        CurrentPage = page;
        // در اینجا می‌توانید منطق بارگذاری داده‌های صفحه را اضافه کنید
    }

    public class DropdownAction
    {
        public string Title { get; set; }
        public string Link { get; set; }
    }
}