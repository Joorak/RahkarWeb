@page "/"
@using Microsoft.AspNetCore.Components.Web
@inject IJSRuntime JSRuntime

<div class="container-fluid p-0">
    <!-- Header with Icons -->
    <nav class="navbar navbar-light bg-light p-2">
        <div class="d-flex">
            <a class="nav-link" href="/profile">
                <i class="bi bi-person-circle fs-2"></i>
            </a>
            <a class="nav-link" href="/cart">
                <i class="bi bi-cart3 fs-2"></i>
            </a>
        </div>
    </nav>

    <!-- Carousel -->
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="images/carousel1.jpg" class="d-block w-100" alt="Carousel 1">
            </div>
            <div class="carousel-item">
                <img src="images/carousel2.jpg" class="d-block w-100" alt="Carousel 2">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Category Circles -->
    <div class="container my-4">
        <h4>گروه‌های کالا</h4>
        <div class="row text-center">
            <div class="col-2">
                <a href="/category/electronics">
                    <div class="circle bg-primary text-white p-3 mb-2 rounded-circle">
                        <i class="bi bi-phone"></i>
                    </div>
                    <p>الکترونیک</p>
                </a>
            </div>
            <div class="col-2">
                <a href="/category/clothes">
                    <div class="circle bg-success text-white p-3 mb-2 rounded-circle">
                        <i class="bi bi-bag"></i>
                    </div>
                    <p>لباس</p>
                </a>
            </div>
            <div class="col-2">
                <a href="/category/home">
                    <div class="circle bg-warning text-dark p-3 mb-2 rounded-circle">
                        <i class="bi bi-house"></i>
                    </div>
                    <p>خانه</p>
                </a>
            </div>
            <div class="col-2">
                <a href="/category/cars">
                    <div class="circle bg-danger text-white p-3 mb-2 rounded-circle">
                        <i class="bi bi-car-front"></i>
                    </div>
                    <p>خودرو</p>
                </a>
            </div>
        </div>
    </div>

    <!-- Product List: TechnoAf -->
    <div class="container my-4">
        <h4>تکنوآف</h4>
        <div class="row row-cols-1 row-cols-md-4 g-4">
            <div class="col">
                <div class="card h-100">
                    <img src="images/product1.jpg" class="card-img-top" alt="Product 1">
                    <div class="card-body">
                        <h5 class="card-title">موبایل A</h5>
                        <p class="card-text">10,000,000 تومان</p>
                        <a href="/product/1" class="btn btn-primary">جزئیات</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <img src="images/product2.jpg" class="card-img-top" alt="Product 2">
                    <div class="card-body">
                        <h5 class="card-title">موبایل B</h5>
                        <p class="card-text">12,000,000 تومان</p>
                        <a href="/product/2" class="btn btn-primary">جزئیات</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom List: Car Manufacturers -->
    <div class="container my-4">
        <h4>محصولات بر اساس خودروساز</h4>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
                <a href="/cars/iran-khodro" class="custom-rect bg-info text-white p-3 text-center">
                    <h5>ایران خودرو</h5>
                </a>
            </div>
            <div class="col">
                <a href="/cars/saipa" class="custom-rect bg-success text-white p-3 text-center">
                    <h5>سایپا</h5>
                </a>
            </div>
            <div class="col">
                <a href="/cars/khodro-sazan" class="custom-rect bg-danger text-white p-3 text-center">
                    <h5>خودروسازان</h5>
                </a>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center p-3 mt-4">
        <p>© 2025 لیزینگ آلفا. کلیه حقوق محفوظ است.</p>
    </footer>
</div>

<style>
    .circle {
        width: 100px;
        height: 100px;
        line-height: 100px;
        margin: 0 auto;
    }
    .custom-rect {
        display: block;
        text-decoration: none;
        transition: transform 0.2s;
    }
    .custom-rect:hover {
        transform: scale(1.05);
    }
</style>

@code {
    protected override async Task OnInitializedAsync()
    {
        await JSRuntime.InvokeVoidAsync("import", "/js/bootstrap.bundle.min.js");
    }
}