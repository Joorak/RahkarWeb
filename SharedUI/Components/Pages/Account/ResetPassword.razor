@page "/reset-password"

@inject IAccountService AccountService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavManager

<div>
    <div class="container page">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xs-12">
                <h1 class="mb-3 text-xs-center">Reset Password</h1>

                <EditForm Model="@resetRequest" OnValidSubmit="ExecuteResetPassword">
                    <FluentValidationValidator />

                    <fieldset class="mt-3 form-group">
                        <div>
                            <MudTextField class="form-control form-control-lg" InputType="InputType.Email"
                                @bind-Value="resetRequest.Email" Label="Email"
                                For="@(() => resetRequest.Email)"
                                Variant="Variant.Outlined"></MudTextField>
                        </div>
                    </fieldset>
                    <fieldset class="mt-3 form-group">
                        <div>
                            <MudTextField class="form-control form-control-lg" InputType="InputType.Password"
                                @bind-Value="resetRequest.NewPassword" Label="NewPassword"
                                For="@(() => resetRequest.NewPassword)"
                                Variant="Variant.Outlined"></MudTextField>
                        </div>
                    </fieldset>
                    <fieldset class="mt-3 form-group">
                        <div>
                            <MudTextField class="form-control form-control-lg" InputType="InputType.Password"
                                @bind-Value="resetRequest.NewConfirmPassword" Label="NewConfirmPassword"
                                For="@(() => resetRequest.NewConfirmPassword)"
                                Variant="Variant.Outlined"></MudTextField>
                        </div>
                    </fieldset>
                    <MudButton class="mt-3 btn btn-lg btn-primary pull-xs-right"
                        Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Send"
                        Color="MudBlazor.Color.Primary" ButtonType="MudBlazor.ButtonType.Submit">
                            Reset Password
                    </MudButton>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private ResetPasswordRequest resetRequest = new();

    /// <summary>
    /// Initialize the component on load.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        var authstate = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authstate.User;
        if (user.Identity.IsAuthenticated)
        {
            NavManager.NavigateTo("/");
        }
    }

    /// <summary>
    /// Reset the password.
    /// </summary>
    private async Task ExecuteResetPassword()
    {
        var result = await AccountService.ResetPassword(resetRequest);
        if (result is not null)
        {
            NavManager.NavigateTo("/login");
        }
    }
}
